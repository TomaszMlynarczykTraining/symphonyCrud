{% extends 'base.html.twig' %}

{% block title %}
    ARTICLES
{% endblock %}

{% block body %}
    {% if articles %}
        <table id='table' class="table table-stripped">
            <thead>
            <tr>
                <th>Title</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for article in articles %}
                <tr>
                    <td>
                        {{ article.title }}
                    </td>
                    <td>
                        <a href="/article/show/{{ article.id }}" class="btn btn-dark">Show </a>
                        <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete </a>
                        <a href="/article/edit/{{ article.id }}" class="btn btn-success">Edit </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    {% else %}
        <p>No articles</p>
    {% endif %}
{% endblock %}
{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}