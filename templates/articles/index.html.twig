{% extends 'base.html.twig' %}

{% block title %}
    ARTICLES
{% endblock %}

{% block body %}
    {% if articles %}
        <table class="table table-stripped">
            <thead>
            <tr>
                <th>Title</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for article in articles %}
                <tr>
                    <td>
                        {{ article }}
                    </td>
                    <td>
                        <a href="/article/1" class="btn btn-dark">Show </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    {% else %}
        <p>No articles</p>
    {% endif %}
{% endblock %}